<%= render 'layouts/flash_messages' %>

<div class="container">
  <h1>顧客一覧</h1>
  <% @users.each_with_index do |user| %>
    <div class="row">
      <div class="d-flex align-items-center border-top staff--index col-3">
        名前:
      </div>
      <div class="d-flex align-items-center border-top staff--index col-5">
        <%= user.name %>
      </div>
      <div class="d-flex align-items-center border-top staff--index col-2">
        <%= link_to "詳細", admins_user_show_path(user.customer_id), class: "btn btn-info btn--resize " %>
      </div>
      <div class="d-flex align-items-center border-top staff--index col-2">
        <%= link_to "削除", "#", method: :delete,
            data: { confirm: "削除してよろしいですか？" },
            class: "btn btn-danger btn--resize" %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        Eメール:
      </div>
      <div class="col-9">
        <%= user.email %>
      </div>
    </div>
  <% end %>
</div>
<br>
<%= link_to "戻る", admins_index_path, class: "btn btn-secondary btn-resize" %>