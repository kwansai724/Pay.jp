
<%= render 'layouts/flash_messages' %>

<% if params[:format].present? %>
  <div class="container mt-3 col-lg-6">
    <h1>顧客詳細</h1>
    <div class="row">
      <div class="d-flex align-items-center border-top mt-2 mb-1 col-4">
        <p class="mt-3">名前:</p>
      </div>
      <div class="d-flex align-items-center border-top mt-2 mb-1 col-8">
        <p class="mt-3"><%= @user.metadata.name %></p>
      </div>
    </div>
    <div class="row">
      <div class="mt-3 mb-3 col-4">
        Eメール:
      </div>
      <div class ="mt-3 mb-3 col-8">
        <%= @user.metadata.email %>
      </div>
    </div>
    <div class="row">
      <div class="mt-3 mb-3 col-4">
        性別:
      </div>
      <div class="mt-3 mb-3 col-8">
        <%= @user.metadata.gender %>
      </div>
    </div>
    <div class="row">
      <div class="mt-3 mb-3 col-4">
        生年月日:
      </div>
      <div class="mt-3 mb-3 col-8">
        <%= @user.metadata.birthday %>
      </div>
    </div>
    <div class="row">
      <div class="mt-3 mb-3 col-4">
        住所:
      </div>
      <div class="mt-3 mb-3 col-8">
        <%= @user.metadata.address %>
      </div>
    </div>
    <div class="row">
      <div class="mt-3 mb-3 col-4">
        プラン:
      </div>
      <div class="mt-3 mb-3 col-8">
        <%= @plan.name %>
      </div>
    </div>
    <div class="row">
      <div class="d-flex align-items-center border-bottom mt-3 mb-3 col-4">
        <p class="mb-3">開始日:</p>
      </div>
      <div class="d-flex align-items-center border-bottom mt-3 mb-3 col-8">
        <p class="mb-3"><%= l(@plan.created_at, format: :middle) %></p>
      </div>
    </div>
    <%= link_to "戻る", admins_user_index_path, class: "btn btn-secondary" %>
  </div>
  
<% else %>

  <div class="container mt-3 col-lg-6">
    <h1>顧客詳細</h1>
    <div class="row">
      <div class="d-flex align-items-center border-top mt-2 mb-1 col-4">
