<div class="container">
  <div class="card-deck mb-3 text-center">
    <div class="card mb-4 shadow-sm">
      <div class="card-header">
        <h4 class="my-0 font-weight-normal">膣美人オンラインサロン</h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title">3,000円<small class="text-muted">/ 月</small></h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li>サロン概要</li>
          <li>引き落とし日：毎月3日</li>
        </ul>
        <%= form_with url: users_plans_upgrade_path do |f| %>
          <script
            type="text/javascript"
            src="https://checkout.pay.jp/"
            class="payjp-button"
            data-payjp=""
            data-key="pk_test_b6cbdc1192a8098cb1ddc58f"
            data-submit-text="上記で決済を行う"
            data-text="カードを新規に登録する"
          ></script>
        <% end %>
        <% if current_user.customer_id && @cards.any? %>
          <%= render "select_card", cards: @cards %>
        <% end %>
      </div>
    </div>
  </div>
</div>
